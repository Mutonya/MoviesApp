<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/usernameprofile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cartoon"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Movie Rating (aligned below the profile image) -->
    <TextView
        android:id="@+id/movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benne"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:text="@string/alreadyhaveanaccount"
        app:layout_constraintTop_toBottomOf="@+id/usernameprofile"
        app:layout_constraintStart_toStartOf="@+id/usernameprofile"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Username (aligned to the right of the profile image) -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benne"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/bookmark"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/usernameprofile"
        app:layout_constraintStart_toEndOf="@+id/usernameprofile"/>

    <!-- Review (aligned below the username) -->
    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benne"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="@string/alreadyhaveanaccount"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"/>

</androidx.constraintlayout.widget.ConstraintLayout>
